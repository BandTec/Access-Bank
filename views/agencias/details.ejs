<%- include('../headerLayout.ejs')%>
<% if(mensagem != null){%>
  <div id="addAlert" class="alert alert-dark fade show alert-dismissible" role="alert">
      Caixa cadastrado com sucesso!
  </div>
<%}%>


<div class="row">

  <div class="col col-md-12">


    <div class="card">
      <h5 style="text-align:center"  class="card-header" style="color: aqua">Agência</h5>
      <div class="card-body">
      <h5 class="card-title">Informações:</h5>
      <p class="card-text">          
          Número da Agência: <%= agencias[0].agencia_nn%> <br>
          Endereço: <%= agencias[0].agencia_end%> &nbsp; N°: <%= agencias[0].agencia_end_nn%><br>
          Cidade: <%= agencias[0].agencia_cid%> <br>
          Estado: <%= agencias[0].agencia_est%> <br>

      </p>
    </div>
  </div>
  </div>


</div>

  <hr >
  
  <br>
  <div class="card" style="text-align:center" >
      <h5 class="card-header" style="color: aqua" style="text-align:center">Caixas</h5>
      
  </div>
  <br>
<a href="/caixas/create/<%=agencias[0].agencia_id %>" style="text-align:right" class="btn btn-secondary"> Novo Caixa</a>
<br><br>

<div class="row">
 
    <!-- Aqui é feito o loop e vai listando as incubadoras-->
    <% for(data of agencias){ %>
     <% if(data.caixa_id != null){%> 
    <div class="col-lg-4 col-md-6 col-sm-6 d-flex align-items-stretch">
        <div class="card" style="min-width: 100%; margin-bottom: 6px">
            <div class="card-body">
                <h4 style="font-size:22px;" class="card-title" style="color: aqua">Caixa
                   
                </h4>
                <p class="card-text">
                    <form action="/caixas/details/<%= data.caixaId %>" method="GET"> 
                        
                        <label><b style="color: beige;">Número Serial:</b></label>
                                       <label><%=data.caixa_nn_serial%></label>
                                        <br> 
                      
                        <label><b style="color: beige;">Configurado ?:</b></label>
                                          <% if(data.caixa_configurado == 1){%>
                                            <label>Sim</label>
                                            <%}else{%>
                                              <label>Não</label>
                                              <%}%>
                                          <br> 
                        
                        
                       
                    
                        <br>
                          <%if(data.caixa_configurado == 1){%>                    
                            <a href="/caixas/details/<%= data.caixa_id%> " class="btn btn-info"  style="position: absolute; bottom: 1.25em; right: 1.25em; color: azure" class="float-right btn waves-effect waves-light azul float-right" disable>Detalhes
                            </a>
                        <%}%>
                    
                    </form> 
                </p>
            </div>
        </div>
    </div>
    
    <%}%>
    <%}%>
  </div>

  <br><br>

  <script>

    setTimeout(function() {
        $('#addAlert').fadeOut('slow');}, 3000
      );
</script>
  <%- include('../footerLayout.ejs')%>