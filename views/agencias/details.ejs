<%- include('../headerLayout.ejs')%>

<div class="row">

  <div class="col col-md-6">


    <div class="card">
      <h5 class="card-header" style="color: aqua">Agencia</h5>
      <div class="card-body">
      <h5 class="card-title">Informações:</h5>
      <p class="card-text">          
          Agencia Número: <%= agencias[0].agencia_nn%> <br>
          Endereço: <%= agencias[0].agencia_end%>
          Cidade: <%= agencias[0].agencia_cid%> <br>
          Estado: <%= agencias[0].agencia_est%> <br>

      </p>
    </div>
  </div>
  </div>


</div>

  <hr >
  
  <br>
  <div class="card" >
      <h5 class="card-header" style="color: aqua" style="text-align:center">Caixas</h5>
      
  </div>
  <br>
<a style="text-align:right" class="btn btn-secondary"> Novo Caixa</a>
<br><br>

<div class="row">
    <!-- Aqui é feito o loop e vai listando as incubadoras-->
    <% for(data of agencias){ %>

    <div class="col-lg-4 col-md-6 col-sm-6 d-flex align-items-stretch">
        <div class="card" style="min-width: 100%; margin-bottom: 6px">
            <div class="card-body">
                <h4 style="font-size:22px;" class="card-title" style="color: aqua">Caixa
                   
                </h4>
                <p class="card-text">
                    <form action="/agencias/details/<%= data.agencia_id %>" method="GET"> 
                        
                        <label><b style="color: beige;">Numero:</b></label>
                                       <label><%=data.agencia_nn%></label>
                                        <br> 
                        <label><b style="color: beige;">Cidade:</b></label>
                                        <label><%=data.agencia_cid%></label>
                                         <br> 
                        <label><b style="color: beige;">Estado:</b></label>
                                         <label><%=data.agencia_est%></label>
                                          <br> 
                        
                        
                       
                    
                        <br>
                       
                        <button type="submit" class="btn btn-info"  style="position: absolute; bottom: 1.25em; right: 1.25em; color: azure" class="float-right btn waves-effect waves-light azul float-right">Detalhes
                        </button>
                    
                    </form> 
                </p>
            </div>
        </div>
    </div>

    <%}%>
  </div>

  <br><br>
  <%- include('../footerLayout.ejs')%>